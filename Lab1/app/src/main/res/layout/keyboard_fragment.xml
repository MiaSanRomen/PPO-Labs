<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".KeyboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="3">

    <Button android:id="@+id/btn1" android:width="120dp" android:height="70dp" android:text="1"/>
    <Button android:id="@+id/btn2" android:width="120dp" android:height="70dp" android:text="2"/>
    <Button android:id="@+id/btn3" android:width="120dp" android:height="70dp" android:text="3"/>
    <Button android:id="@+id/btn4" android:width="120dp" android:height="70dp" android:text="4"/>
    <Button android:id="@+id/btn5" android:width="120dp" android:height="70dp" android:text="5"/>
    <Button android:id="@+id/btn6" android:width="120dp" android:height="70dp" android:text="6"/>
    <Button android:id="@+id/btn7" android:width="120dp" android:height="70dp" android:text="7"/>
    <Button android:id="@+id/btn8" android:width="120dp" android:height="70dp" android:text="8"/>
    <Button android:id="@+id/btn9" android:width="120dp" android:height="70dp" android:text="9"/>
    <Button android:id="@+id/btnDot" android:width="120dp" android:height="70dp" android:text="."/>
    <Button android:id="@+id/btn0" android:width="120dp" android:height="70dp" android:text="0"/>
    <Button android:id="@+id/btnDel" android:width="120dp" android:height="70dp" android:text="C"/>
</GridLayout>

